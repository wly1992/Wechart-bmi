/* pages/page1/test.wxss */
    .main{
        width: 100%;
        padding: 0 70rpx;
        box-sizing: border-box;
    }
    .weight{
        height: 138rpx; 
        width: 100%;
        margin-top: 10rpx;
        position: relative;
    }
    .weight-num{
        width: 400rpx;
        height: 138rpx;
        line-height: 138rpx;
        position: absolute;
        left: 0;
        top: 0;
        font-size: 100rpx;
    }
    .weight .weight-num span{
        font-size: 24rpx;
    }
    .weight .recoder-button{
        width: 174rpx;
        height: 82rpx;
        border: 2rpx solid #50c2a9;
        color: #50c2a9;
        line-height: 82rpx;
        text-align: center;
        border-radius: 5rpx;
        position: absolute;
        right: 0;
        top: 26rpx;
        font-size: 36rpx;
        cursor: pointer;
    }
    .update{
        height: 50rpx;
        line-height: 50rpx;
        font-size: 30rpx;
        color: #c8c7cb;
    }
    .message{
        margin-top: 66rpx;
        display: flex;
    }
    .message .tag{
        flex: 1;
        height: 190rpx;
    }
    .message .tag .tag-p{
        height: 70rpx;
        font-size: 32rpx;
        color: #a5a5a5;
        text-align: center;
        line-height: 70rpx;
    }
    .message .tag .tag-p.num{
        color: #595959;
    }
    .message .tag .tag-p.supplement{
        height: 50rpx;
        line-height: 50rpx;
    }
    .message .tag .tag-p.supplement span{
        display: inline-block;
        width: 92rpx;
        background-color: #096;
        border-radius: 5rpx;
        color: white;
        font-size: 26rpx;
    }
    .message .tag .tag-p.supplement span.thin{
        background-color: #ffde33;
    }
    .message .tag .tag-p.supplement span.fat{
        background-color: #ff9933;
    }
    .message .tag .tag-p.supplement span.fater{
        background-color: #cc0033;
    }
    .message .tag .tag-p .arrow{
      display: inline-block;
      width: 30rpx;
      height: 70rpx;
      vertical-align: top
    }
    .button-area{
      height: 60rpx;
      line-height: 60rpx;
      text-align: center;
      margin-top: 15rpx;
    }
    .button-area .button{
      margin: 0 15rpx;
    }
    .container{
      width: 100%;
      height: 520rpx;
      position: relative;
    }
    ec-canvas {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }