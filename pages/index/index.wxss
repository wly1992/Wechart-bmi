    .home{
        width: 100%;
    }
    .circle-area{
        width: 728rpx;
        height: 728rpx;
        margin: 100rpx auto 0 auto;
        position: relative;
    }
    .head-pic{
        width: 210rpx;
        height: 210rpx;
        /* border-radius: 50%;
